extends: default

rules:
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
    check-keys: false
  line-length:
    max: 180
    level: warning
  comments:
    min-spaces-from-content: 1
  document-start: disable

yaml-files:
  - '*.yaml'
  - '*.yml'

ignore: |
  node_modules/
  .aws-sam/
  target/ 